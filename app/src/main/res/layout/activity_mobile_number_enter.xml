<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.signup.MobileNumberEnterActivity"
    android:background="@color/white"
    android:id="@+id/rl_main"
    android:focusableInTouchMode="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/small_15">
            <LinearLayout
                android:id="@+id/ll_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_lan_logo"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_us_logo_png" />
                <TextView
                    android:id="@+id/tv_lan_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EN"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/extra_large_35"
                android:src="@drawable/ic_logo_blue" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/small_15"
                android:text="@string/register_with_yeel_sustenta"
                android:textColor="@color/textPrimary"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/text_size_22" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:layout_marginTop="@dimen/extra_large_35"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/ll_mobile_county_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_flag"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_country_logo" />
                        <TextView
                            android:id="@+id/tv_county_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/country_code"
                            android:layout_marginStart="5dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="@dimen/text_size_16"
                            android:textColor="@color/textPrimary"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="5">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="75"
                    android:orientation="vertical">
                    <EditText
                        android:maxLength="@integer/name_max_length"
                        android:id="@+id/maskedEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edit_text_null"
                        android:fontFamily="@font/roboto_medium"
                        android:hint="@string/mobile_number"
                        android:inputType="phone"
                        android:paddingTop="@dimen/small_15"
                        android:gravity="start"
                        android:importantForAutofill="no"
                        android:textColor="@color/textPrimary"
                        android:paddingBottom="@dimen/small_15"
                        android:textColorHint="@color/grayThree"
                        android:textSize="@dimen/text_size_16"
                        />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grayOne"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="5dp"
                    android:layout_weight="5">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="75"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grayOne"/>
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_marginTop="@dimen/medium_25"
                android:id="@+id/tv_continue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/continue_label"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16"
                android:fontFamily="@font/roboto_medium"
                android:padding="@dimen/small_13"
                android:background="@drawable/bg_button_three"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_15"
                android:gravity="center"
                android:id="@+id/ll_login"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/textPrimary"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/already_have_an_account" />
                <TextView
                    android:id="@+id/tv_sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="@string/log_in"
                    android:layout_marginStart="5dp"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>