<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:background="@color/colorPrimaryDark"
        >

        <ImageView
            android:id="@+id/home_btn_logot"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:foregroundTint="@color/white"
            android:src="@drawable/ic_home_logout" />

        <ImageView
            android:id="@+id/title_toolbar_home"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_home_yeel_icon_new"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/rl_notification"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/home_btn_settings">
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_green_icon"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_ellipse_green_notification" />

            <ImageView
                android:id="@+id/iv_notification"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_home_notification" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/home_btn_settings"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_home_settings" />

    </RelativeLayout>

    <!--</android.support.v7.widget.Toolbar>-->


</RelativeLayout>