<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.signup.ChooseLinkOrNewActivity"
    android:background="@color/white">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/white"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp">
            <include
                layout="@layout/toolbar_design_white" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_22"
        android:textColor="@color/textPrimary"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head"
        android:text="@string/select_how_you_want_to_create_link_yeel_account"
        android:padding="@dimen/small_15"/>
    <TextView
        android:id="@+id/tvSub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_11"
        android:textColor="@color/textPrimary"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        android:paddingStart="@dimen/small_15"
        android:paddingEnd="15dp"
        android:paddingBottom="@dimen/small_15"
        android:text="@string/you_can_create_a_new_bank_account_or_link_your_existing_bank_account_by_selecting_one_of_our_digital_bank_partners"/>

    <View
        android:id="@+id/viewOne"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/grayOne"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSub"
        android:layout_gravity="center_vertical"/>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/viewOne"
        android:id="@+id/ll_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:padding="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_create"
                android:layout_width="22dp"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_link_non_selected"
                />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_create"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:gravity="left"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:text="@string/create_a_new_yeel_account"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_medium"
            android:layout_gravity="center_vertical"
            android:textColor="@color/textPrimary" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/check_create"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight=".5"
            android:src="@drawable/ic_checked_blue" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:id="@+id/viewTwo"
        android:background="@color/grayOne"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_create"
        android:layout_gravity="center_vertical"/>
    <LinearLayout
        android:id="@+id/ll_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewTwo"
        android:padding="15dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_link"
                android:layout_width="22dp"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_create_non_selected"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_link_account"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:gravity="left"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:text="@string/link_existing_bank_account"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_medium"
            android:layout_gravity="center_vertical"
            android:textColor="@color/textPrimary"/>
        <ImageView
            android:id="@+id/check_link"
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_checked_blue"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/grayOne"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_link"
        android:layout_gravity="center_vertical"/>

</androidx.constraintlayout.widget.ConstraintLayout>