<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:paddingTop="@dimen/small_15"
            android:paddingBottom="@dimen/small_15">
            <RelativeLayout
                android:layout_weight="17"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_weight="4"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/gray_round">
                    <TextView
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:textSize="17dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/textPrimary"
                        android:text="J"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="4"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/gray_round_for_place_holder">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:padding="1dp" />
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="83">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="3dp"
                        android:background="@drawable/bg_label_place_holder"
                        android:fontFamily="@font/roboto_medium"
                        android:text=""
                        android:textColor="@color/textPrimary"
                        android:textSize="@dimen/text_size_12" />

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:background="@drawable/bg_label_place_holder"
                        android:text=""
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textPrimary"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/text_size_10"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayOne"
            />

    </LinearLayout>
</RelativeLayout>